@model BookTypeViewModel
@if (!String.IsNullOrEmpty(@ViewBag.CreateFailedMessage))
{
    <div class="alert alert-danger" style="text-align:center">@ViewBag.CreateFailedMessage</div>
}
@if (!String.IsNullOrEmpty(@ViewBag.CreateBookTypeSuccessMessage))
{
    <div class="alert alert-success" style="text-align:center">@ViewBag.CreateBookTypeSuccessMessage</div>
}
<body>
    <div class="container">
        <h2 style="text-align: center;" class="display-4">Page of Add Book Type</h2>
        <div class="row" style="text-align:center; margin-top:150px;">
            <div class="col-3"></div>
            <div class="col-md-6 col-md-offset-3 col-md-offset-3">
                <form asp-controller="BookType" asp-action="Index" method="post">
                    <div class="form-group">
                        <label for="">Book Type</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <input type="submit" style="margin-top: 10px;" class="btn btn-outline-primary" value="Save">
                </form>
            </div>
        </div>
    </div>
</body>
